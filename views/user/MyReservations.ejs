<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th>Item Name</th>
                <th>Shop Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Status</th>
            </tr>
            <% 
            if(orderItems!=null)
            {
                let total = 0;

                orderItems.forEach(item => {
            %>
            <tr class="order-item">
                <td><%= item.itemName%></td>
                <td><%= item.name%></td>
                <td><%= item.quantity %></td>
                <td><%= item.price %></td>
                <td><%= parseFloat(item.quantity) * parseFloat(item.price) %></td>
                <td><%= item.order_status %></td>
                
            </tr>
            <%
                    total += parseFloat(item.quantity) * parseFloat(item.price);
                })
            %>
            <tr>
                <td colspan="3" aling="right"><b>Total</b></td>
                <td><%= total %></td>
                <td>&nbsp;</td>
            </tr>
               
                
            <%
            }
            else
            {
            %>

            <tr>
                <td colspan="5" align="center">No order yet</td>
            </tr>

            <%
            }
            %>
       
    </table>
    
    </div>
</body>
</html>